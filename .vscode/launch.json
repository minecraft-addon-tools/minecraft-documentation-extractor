    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/out/cli.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "--scripting",
                "--sort",
                "--fix",
                "./Documentation_Scripting.html",
                "./Documentation_Scripting.json"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}